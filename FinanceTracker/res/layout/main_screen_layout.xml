<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.financetracker"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/main_screen_income_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_screen_income_label"
        android:textSize="30sp" />

    <com.example.financetracker.views.MoneyAmountView
        android:id="@+id/income_method_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_screen_income_label"
        custom:methodType="incomeButton" />

    <TextView
        android:id="@+id/main_screen_expenses_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_screen_expenses_label"
        android:textSize="30sp" />

    <com.example.financetracker.views.MoneyAmountView
        android:id="@+id/expenses_method_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_screen_expenses_label"
        custom:methodType="expensesButton" />

</RelativeLayout>